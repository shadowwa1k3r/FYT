<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.fyt.loki.fyt.MainAppPage.Menu.Friends.FriendsListAll">

    <android.support.v7.widget.CardView
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="2dp"
        android:elevation="10dp"
        android:fadingEdge="vertical"
        android:minHeight="?attr/actionBarSize"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <android.support.v7.widget.SearchView
                android:id="@+id/search"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/et_baordersearch"
                android:queryHint="Search..."/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/searchava"
                android:layout_width="35dp"

                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/circleimageprofile"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/friends_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Friends"
            android:textColor="#000000"
            android:textSize="18sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/searchfriend"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@+id/invite"
            android:background="@drawable/profpagebtn"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="Search for friend"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/invite"
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/profpagebtn"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="Invite friend"
            android:textAllCaps="true"/>
    </RelativeLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="false"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="#000000"
        android:visibility="visible"/>

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableRight="@drawable/choseico"
        android:gravity="left|center_vertical"
        android:text="Friend requests"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textStyle="bold"
        />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="false"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="#000000"
        android:visibility="visible"/>

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableRight="@drawable/choseico"
        android:gravity="left|center_vertical"
        android:text="People you may know"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textStyle="bold"
        />

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="false"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="#000000"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:text="Your friends"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/friendsrv_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
